{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CompileRelease",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\..\\hb_fcgi\\BuildEXE.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "EXEName":"mod_harbour",
                    "BuildMode":"release",
					"HB_COMPILER":"${input:CCompiler}",
                    "WebsiteDrive":"R:",
                    "SiteRootFolder":"\\Harbour_websites\\fcgi_mod_harbour\\"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\..\\hb_fcgi\\BuildEXE.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "EXEName":"mod_harbour",
                    "BuildMode":"debug",
					"HB_COMPILER":"${input:CCompiler}",
                    "WebsiteDrive":"R:",
                    "SiteRootFolder":"\\Harbour_websites\\fcgi_mod_harbour\\"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label":"KillFcgiExe",
            "type": "shell",
            "command":"taskkill",
            "args": ["/IM","FCGImod_harbour.exe","/f","/t"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "TurnOnMod_HarbourDebugger",
            "type": "shell",
            "command": "${workspaceFolder}\\ToggleMod_HarbourDebugger.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DebugMode":"on",
                    "DynamicHRBFolder":"R:\\Harbour_websites\\DynamicHRB\\hb001\\"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "revealProblems": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "TurnOffMod_HarbourDebugger",
            "type": "shell",
            "command": "${workspaceFolder}\\ToggleMod_HarbourDebugger.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DebugMode":"off",
                    "DynamicHRBFolder":"R:\\Harbour_websites\\DynamicHRB\\hb001\\"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "revealProblems": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }

    ],
    "inputs": [
        {
            "id": "CCompiler",
            "type": "pickString",
            "description": "Select C Compiler",
            "options": ["mingw64","msvc64"],
            "default": "mingw64"
        }
    ]
}