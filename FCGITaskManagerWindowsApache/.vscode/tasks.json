{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RunDebug",
            "command": "${command:workbench.action.debug.start}",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Compile and Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "command": "${workspaceFolder}\\BuildEXE.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "EXEName": "FCGITaskManager",
                    "BuildMode": "debug",
                    "HB_COMPILER": "${input:CCompiler}"
                },
                "statusbar": {"label" : "<Compile Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "command": "${workspaceFolder}\\BuildEXE.bat",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "EXEName": "FCGITaskManager",
                    "BuildMode": "release",
                    "hb_compiler": "${input:CCompiler}"
                },
                "statusbar": {"label" : "<Compile Release and Run>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "DelAllPPO",
            "type": "shell",
            "command": "del *.ppo",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del All PPO>","hide" : false}
            },
            "presentation": {"reveal": "never"}
        }
    ],
    "inputs": [
        {
            "id": "CCompiler",
            "type": "pickString",
            "description": "Select C Compiler",
            "options": ["mingw64","msvc64"],
            "default": "mingw64"
        }
    ]
}